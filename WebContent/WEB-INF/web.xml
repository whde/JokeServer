<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">
  
  <listener>
    <listener-class>utils.ListenerLoadConfig</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>JokeList</servlet-name>
    <servlet-class>servlets.JokeList</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>JokeList</servlet-name>
    <url-pattern>/jokelist</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>JokeDetail</servlet-name>
    <servlet-class>servlets.JokeDetail</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>JokeDetail</servlet-name>
    <url-pattern>/detail</url-pattern>
  </servlet-mapping>
  
</web-app>